<% cache @product do %>
<h1>ID: <%= @product.id %></h1>
<h1>Name of product: <%= @product.name =%></h1>
<h2>Date of creation: <%= @product.created_at =%></h2>
<%= @product.description %>
Inventory count: <%= @product.inventory_count.to_i > 0 ? @product.inventory_count : "Out of stock" %>
<%= render "inventory", product: @product %>
<%= image_tag @product.featured_image if @product.featured_image.attached? %>
<%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?" } if authenticated? %>
<%= link_to "Back", products_path %>
<% end %>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <div>
      ID: <%= product.id %>
    </div>
    <div>
      Name of product: <%= product.name %>
    </div>
    <div>
      Created at: <%= product.created_at %>
    </div>
    <div>
      <a href="/products/<%= product.id %>">
        <%= product.name %>
      </a>
    </div>
    </br>
  <% end %>
</div>